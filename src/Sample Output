 // instantiate a new Sneaker object
        Sneaker sneaker1 = new Sneaker("Nike", "Black", 10.5, "Leather", 2, 
            1, true, "Lace", "Rubber", "Running");
        // add sneaker 1 to an array of shoes
        shoeCollection[0] = sneaker1;

